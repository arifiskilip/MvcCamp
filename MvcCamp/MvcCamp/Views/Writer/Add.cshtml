@model Entities.Concrete.Writer

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Add", "Writer", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.Label("Adı")
            @Html.TextBoxFor(w => w.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(w => w.FirstName, "", new { @style = "color: red" })
            <br />
            @Html.Label("Soyadı")
            @Html.TextBoxFor(w => w.LastName, new { @class = "form-control"})
            @Html.ValidationMessageFor(w => w.LastName,"", new { @style = "color: red;" })
            <br />
            @Html.Label("Hakkında")
            @Html.TextBoxFor(w => w.About, new { @class = "form-control" })
            @Html.ValidationMessageFor(w => w.About, "", new { @style = "color: red;" })
            <br />
            @Html.Label("Resmi")
            @Html.TextBoxFor(w => w.WriterImage, new { @class = "form-control" })
            @Html.ValidationMessageFor(w => w.WriterImage, "", new { @style = "color: red;" })
            <br />
            @Html.Label("Mail")
            @Html.TextBoxFor(w => w.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(w => w.Email, "", new { @style = "color: red;" })
            <br />
            @Html.Label("Şifresi")
            @Html.TextBoxFor(w => w.Password, new { @class = "form-control",@type="password" })
            @Html.ValidationMessageFor(w => w.Password, "", new { @style = "color: red;" })
            <br />
            <button class="btn btn-warning">Yazar Ekle</button>
        </div>
    </div>

}
