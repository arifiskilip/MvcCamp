@using Entities.Concrete
@model List<About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h2>Hakkında</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Başlık</th>
                <th>Durum</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Detail1</td>
                    <td>
                        @switch (@item.Statu)
                        {
                            case true:<span class="badge badge-success">Aktif</span>break;
                            case false:<span class="badge badge-danger">Pasif</span>break;
                        }
                    </td>
                    <td>
                        <a class="btn btn-success" href="/About/StatuActive/@item.Id">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Aktif Yap
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="/About/StatuPassive/@item.Id">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Pasif Yap
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.Action("partialAdd", "About")
</div>



