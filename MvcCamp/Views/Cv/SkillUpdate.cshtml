@model Entities.Concrete.CvSkill
@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
@using (Html.BeginForm("SkillUpdate", "Cv", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.Label("Yetenk Adi")
            @Html.TextBoxFor(c => c.SkillName, new { @class = "form-control" })
            <br />
            @Html.Label("Yetenek Puanı")
            @Html.TextBoxFor(c => c.SkillPoint, new { @class = "form-control" })
            <br />
            <button class="btn btn-success">Güncelle</button>
            <a href="/Cv/SkillUpdate" class="btn btn-primary">YETENEKLER</a>

        </div>
    </div>
}